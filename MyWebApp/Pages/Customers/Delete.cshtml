@page
@model MyWebApp.Pages.Customers.Delete
@{
    ViewData["Title"] = "Delete Customers";
}

<div class="mx-auto rounded border p-4" style="width: 400px">
    <h2 class="text-center mb-3">Delete Customers</h2>
    <hr />

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    <p>Are you sure you want to delete this customers?</p>
    <p>Customers ID=@Request.Query["id"]</p>
    <hr />
    <form method="post">
        <div class="row">
            <div class="col-sm-6 d-grid">
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
            <div class="col-sm-6 d-grid">
                <a class="btn btn-outline-danger" asp-page="./Index">Cancel</a>
            </div>
        </div>
    </form>
</div>